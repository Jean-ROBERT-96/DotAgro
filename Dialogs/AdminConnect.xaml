<Window x:Class="DotAgro.Dialogs.AdminConnect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DotAgro.Dialogs"
        mc:Ignorable="d"
        Title="AdminConnect" Height="200" Width="500">
    <Grid>
        <StackPanel>
            <TextBlock Margin="0,20,0,20" TextAlignment="Center" Text="Mode administrateur : Veuillez vous connecter."/>
            <DockPanel Margin="5,2,5,2">
                <Label Content="Mail : " Width="100"/>
                <TextBox x:Name="mailBox" Margin="5"/>
            </DockPanel>
            <DockPanel Margin="5,2,5,2">
                <Label Content="Mot de passe : " Width="100"/>
                <PasswordBox x:Name="passBox" Margin="5"/>
            </DockPanel>
            <DockPanel Margin="20" HorizontalAlignment="Center">
                <Button x:Name="cancelClick" Click="CancelButton_Click" Content="Annuler" Width="150" Margin="30,0,30,0"/>
                <Button x:Name="validClick" Click="ValidButton_Click" Content="Valider" Width="150" Margin="30,0,30,0"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
