<Window x:Class="DotAgro.graphics.EditName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DotAgro.graphics"
        mc:Ignorable="d"
        Title="Modifier" Height="150" Width="300" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Choisissez un nouveau nom :"/>
            <TextBox x:Name="nameEdit" Margin="10"/>
            <Button x:Name="EditNamed" Margin="10" Content="Modifier" Click="EditNamed_Click"/>
        </StackPanel>
    </Grid>
</Window>
