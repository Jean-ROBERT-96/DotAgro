<Page x:Class="DotAgro.graphics.ProfileFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DotAgro.graphics"
      mc:Ignorable="d" 
      d:DesignHeight="120" d:DesignWidth="525"
      Title="ProfileFrame">

    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Margin="10"/>
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBlock x:Name="name" Background="White" Margin="10"/>
            <TextBlock x:Name="email" Background="White" Margin="10"/>
            <TextBlock x:Name="phone" Background="White" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Column="2" VerticalAlignment="Center">
            <TextBlock x:Name="gender" Background="White" Margin="10"/>
            <TextBlock x:Name="service" Background="White" Margin="10"/>
            <TextBlock x:Name="site" Background="White" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
