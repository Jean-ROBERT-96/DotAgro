<Window x:Class="DotAgro.graphics.ManagementEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DotAgro.graphics"
        mc:Ignorable="d"
        Title="ManagementEdit" Height="350" Width="400" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="manageText" Margin="10" Width="315"/>
            <Button x:Name="Add" Margin="10" Content="Ajouter"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="ScreenManage" HorizontalAlignment="Center" Width="380"  />
        </ScrollViewer>
    </Grid>
</Window>
