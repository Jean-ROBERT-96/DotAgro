<Window x:Class="DotAgro.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DotAgro"
        mc:Ignorable="d"
        Title="Login ADMIN" Height="200" Width="300" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Entrez votre identifiant :" Margin="10,2,10,2"/>
            <TextBox x:Name="user" Margin="10,2,10,2"/>
            <Label Content="Entrez votre mot de passe :" Margin="10,2,10,2"/>
            <PasswordBox x:Name="password" Margin="10,2,10,2"/>
            <Button x:Name="Connect" Margin="10" Content="Connexion"/>
        </StackPanel>
    </Grid>
</Window>
